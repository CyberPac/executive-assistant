{
  "name": "personal-executive-assistant",
  "version": "2.0.0-phase2",
  "description": "AI-powered Personal Executive Assistant - Phase 2 Intelligence Expansion",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --noEmit false --outDir dist",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:agents": "jest tests/unit/agents/",
    "test:performance": "jest --testNamePattern=performance",
    "test:security": "jest tests/security/",
    "lint": "eslint src tests --ext .ts --max-warnings 50",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "lint:check": "eslint src tests --ext .ts --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "quality:check": "npm run build && npm run lint:check && npm run typecheck && npm run test",
    "quality:fix": "npm run lint:fix && npm run test:coverage",
    "prepare": "command -v husky >/dev/null && husky || echo 'Husky not available - skipping'",
    "start:cultural": "tsx agents/cultural-intelligence/index.ts",
    "start:travel": "tsx agents/travel-logistics/index.ts",
    "start:financial": "tsx agents/financial-management/index.ts",
    "start:crisis": "tsx agents/crisis-management/index.ts"
  },
  "dependencies": {
    "@types/node": "^20.19.7",
    "better-sqlite3": "^12.2.0",
    "claude-flow": "^1.1.1",
    "nanoid": "^5.0.4",
    "ruv-swarm": "^1.0.14",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1"
  },
  "keywords": [
    "executive-assistant",
    "ai",
    "multi-agent",
    "claude-flow",
    "leasa",
    "phase2"
  ],
  "author": "CyberPac",
  "license": "MIT",
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  }
}
